#include <iostream>
#include <conio.h>
#include <stdio.h>
#include <stdlib.h>


using namespace std;

int menu;
void pilih();
void buat_baru();
void tambah_depan();
void tambah_belakang();
void hapus_depan();
void hapus_belakang();
void Menyisipkan_di_posisi_tertentu();
void Hapus_di_posisi_tertentu();
void tampil();

struct simpul{
  char nama [20];
  struct simpul *next;
} mhs, *baru, *awal=NULL, *akhir=NULL,*hapus,*bantu;



int main()
{
  do
  {
    cout<<"1. Tambah Depan"<<endl;
    cout<<"2. Tambah Belakang"<<endl;
    cout<<"3. Hapus Depan"<<endl;
    cout<<"4. Hapus Belakang"<<endl;
    cout<<"5. Menyisipkan di posisi tertentu"<<endl;
    cout<<"6. Hapus di posisi tertentu"<<endl;
    cout<<"7. Tampilkan"<<endl;
    cout<<"8. Selesai"<<endl;
	cout<<endl;
    cout<<"Masukan Pilihan Anda : ";
    cin>>menu;
    cout<<endl<<endl;
    pilih();
  } while(menu!=8);
  return 0;
}

void pilih()
{
    if(menu==1)
        tambah_depan();
    else if(menu==2)
    tambah_belakang();
    else if(menu==3)
        hapus_depan();
    else if(menu==4)
    hapus_belakang();
    else if(menu==5)
    Menyisipkan_di_posisi_tertentu();
    else if(menu==6)
    Hapus_di_posisi_tertentu();
  else if(menu==7)
        tampil();
    else
    cout<<"selesai";
}

void buat_baru()
{
  baru=(simpul*)malloc(sizeof(struct simpul));
  
  cout<<"masukkan nama  : ";cin>>baru->nama;
    baru->next=NULL;
    cout<<endl;}

void tambah_depan()
{
  buat_baru();
    if(awal==NULL)
    {
        awal=baru;
    akhir=baru;
        akhir->next=NULL;
  }
    else
  {
        baru->next=awal;
        awal=baru;
    }

    tampil();
}
